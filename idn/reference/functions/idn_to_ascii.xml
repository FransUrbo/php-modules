  <refentry id='function.idn_to_ascii'>
   <refnamediv>
    <refname>idn_to_ascii</refname>
    <refpurpose>
     Convert to ACE according to IDNA
    </refpurpose>
   </refnamediv>
   <refsect1>
    <title>Description</title>
     <methodsynopsis>
      <type>string</type><methodname>idn_to_ascii</methodname>
      <methodparam><type>string</type><parameter>string</parameter></methodparam>
      <methodparam choice="opt"><type>string</type><parameter>charset</parameter></methodparam>
     </methodsynopsis>
    <para>
     Returns a IDNA encoded (ASCII) string.
    </para>
    <para>
     <function>idn_to_ascii</function> returns a IDN encoded string
     <example>
      <title>Relevant IDN Statements</title>
      <programlisting role="php">
<![CDATA[
<?php
echo idn_to_ascii('räksmörgås.josefßon.org', 'ISO-8859-1');
?>
]]>
      </programlisting>
     </example> 
    </para>
   </refsect1>
  </refentry>

